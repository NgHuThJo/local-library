<h1><%= title %>: <%= genre.name %></h1>
<% if(genre_books.length) { %>
<div style="margin-left: 20px; margin-top: 20px">
  <p>
    <strong
      >Delete the following books before attempting to delete this
      genre.</strong
    >
  </p>
  <h4>Books</h4>
  <dl>
    <% for(let book of genre_books) { %>
    <dt>
      <a href="<%= book.url %>"> <%= book.title %> </a>
    </dt>
    <dd><%= book.summary %></dd>
    <% } %>
  </dl>
  <% } else { %>
  <p>Do you really want to delete this Genre?</p>
  <form method="post">
    <div class="form-group">
      <input
        type="hidden"
        id="genreid"
        class="form-control"
        name="genreid"
        value="<%= genre._id %>"
      />
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>
</div>
<% } %>
